#include "main.h"

/**
 * reverse_array - reverse the content of an array of integers
 * @a: array of integers
 * @n: number of elements of the array
 * Return: void
 */

void reverse_array(int *a, int n)
{
	int i;
	int tmp;

	while (n >= 0)
	{
		i = 0;
		tmp = a[i];
		a[n - 1 - i] = tmp;
		n--;
		i++;
	}
}
