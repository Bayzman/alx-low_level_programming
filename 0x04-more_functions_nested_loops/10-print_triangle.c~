#include "main.h"

/**
 * print_triangle - print triangle using #
 * @size: integer
 * Return: void
 */

void print_triangle(int size)
{
	int a;
	int b;

	a = 0;
	b = size;

	int i;
	for (i = 0; i < size; i++)
	{
		a += 1;
		b -= 1;

		int j;
		for (j = b; j > 0; j--)
		{
			_putchar(' ');
		}

		int k;
		for (k = 0; k < a; k++)
		{
			_putchar('#');
		}

		_putchar('\n');
	}
}
