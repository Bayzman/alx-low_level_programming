#include "main.h"

/**
 * print_diagonal - draw a diagonal line
 * @n: number of times to print '\'
 * Return: void
 */

void print_diagonal(int n)
{
	int i;
	int c;

	i = 0;

	while (n > 0)
	{
		c = 0;
		while (c > 0)
		{
			_putchar(' ');
			c--;
		}
		_putchar('\\');
		_putchar('\n');
		i++;
		n--;
	}
	if (i < 1)
		_putchar('\n');
}
